{
  "column-spacing": 0,
  "row-spacing": 0,
  "close-on-lost-focus": true,
  "show-keybinds": true,
  "no-version-info": true,
  "buttons": [
    {
      "label": "lock",
      "action": "hyprlock",
      "text": "Lock",
      "keybind": "l",
      "icon": ".config/wleave/icons/lock.svg"
    },
    {
      "label": "hibernate",
      "action": "systemctl hibernate",
      "text": "Hibernate",
      "keybind": "h",
      "icon": ".config/wleave/icons/hibernate.svg"
    },
    {
      "label": "logout",
      "action": "loginctl terminate-user $USER",
      "text": "Logout",
      "keybind": "e",
      "icon": ".config/wleave/icons/logout.svg"
    },
    {
      "label": "shutdown",
      "action": "systemctl poweroff",
      "text": "Shutdown",
      "keybind": "s",
      "icon": ".config/wleave/icons/shutdown.svg"
    },
    {
      "label": "suspend",
      "action": "systemctl suspend",
      "text": "Suspend",
      "keybind": "u",
      "icon": ".config/wleave/icons/suspend.svg"
    },
    {
      "label": "reboot",
      "action": "systemctl reboot",
      "text": "Reboot",
      "keybind": "r",
      "icon": ".config/wleave/icons/reboot.svg"
    }
  ]
}
