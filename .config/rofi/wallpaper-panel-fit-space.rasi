* {
    very-sketched-color: #f00a; // red
    sketch-color: #0ffa; // aqua
    to-upscale-color: #ff0a; // yellow
}

wallpaper-panel {
    children:         ["current-rating", "wallpaper-container", "rating-panel"];
    background-color: transparent;
    width:            var(wallpaper-width);
    expand:           false;
}

current-rating {
    background-color: transparent;
    children: ["top-textbox"];
    expand: false;
    margin: 0 0 5px 0;
}

top-textbox {
    children: [ "void", "textbox-current-rating", "textbox-time-left" ];
    orientation: horizontal;
}

textbox-current-rating, textbox-time-left {
    // border: 2;
    text-color: @on-surface;
    text-outline: true;
    text-outline-width: 2;
    text-outline-color: @surface;
    text-outline-color: @background;
    vertical-align: 0.5;
}

textbox-current-rating {
    content: "__WALLPAPER_RATING__";
    horizontal-align: 0.5;
    expand: false;
}
textbox-time-left {
    padding: 0 5px;
    expand: true;
}

wallpaper-container {
    children:      ["icon-wallpaper"];
    border:        var(wallpaper-border);
    border-radius: 10px;
    border-color:  @outline;
    orientation:   horizontal;
    expand:        false;
}
// It needs to be an 'icon-' element so that we can use the size property
icon-wallpaper {
    background-image: var(wallpaper-image);
    size:             var(wallpaper-height);
    squared:          false;
}

rating-panel {
    background-color: transparent;
    children: [ "default-ratings-1-5", "default-ratings-6-10", "custom-ratings"];
    // orientation: horizontal;
}

default-ratings-1-5, default-ratings-6-10 {
    background-color: transparent;
    orientation: horizontal;
    spacing: 5px;
    expand: false;
    margin: 0;
    padding: 0;
}

default-ratings-1-5 {
    children: [ "button-rate-1", "button-rate-2", "button-rate-3", "button-rate-4", "button-rate-5" ];
}
default-ratings-6-10 {
    children: [ "button-rate-6", "button-rate-7", "button-rate-8", "button-rate-9", "button-rate-10" ];
}

button-to-upscale,
button-very-sketched,
button-sketch,
button-rate-1,
button-rate-2,
button-rate-3,
button-rate-4,
button-rate-5,
button-rate-6,
button-rate-7,
button-rate-8,
button-rate-9,
button-rate-10 {
    margin: 2px 0 0 0;
    padding: -7px 0;
    border: 2px;
    border-radius: 5px;
    border-color: @outline;
    text-color: @on-surface;
    horizontal-align: 0.5;
    vertical-align: 0.5;
    text-outline: true;
    text-outline-width: 1;
    text-outline-color: @surface;
    markup: true;
    cursor: pointer;
    // expand: false;
}

button-rate-1 {
    action: "kb-custom-1";
    content: "<span weight='2000'>1</span>";
    background-color: @red-to-lime-1;
}
