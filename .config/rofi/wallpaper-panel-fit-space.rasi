custom-ratings {
    background-color: transparent;
    children: [ "button-to-upscale", "button-very-sketched", "button-sketch" ];
    orientation: horizontal;
    expand: false;
    spacing: 5px;
}

button-very-sketched, button-sketch, button-to-upscale {
    // margin: 0;
}

button-very-sketched {
    action: "kb-custom-12";
    content: "<span size='x-small'></span>";
    background-color: @very-sketched-color;
    text-outline-width: 0.5;
}
button-sketch {
    action: "kb-custom-13";
    content: "<span size='small'>󰷉</span>";
