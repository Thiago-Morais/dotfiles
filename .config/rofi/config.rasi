@theme "~/.config/rofi/theme.rasi"

configuration {
    modes: "window,run,ssh,drun,emoji,filebrowser";
    font: "JetBrainsMono NFP 24";
    show-icons: true;
    terminal: "alacritty";
    // drun-match-fields: "name,generic,exec,categories,keywords";
